{
  "name": "pex-renderer",
  "version": "4.0.0-alpha.56",
  "description": "Physically Based Renderer (PBR) and scene graph designed as ECS for PEX: define entities to be rendered as collections of components with their update orchestrated by systems.",
  "keywords": [
    "pex",
    "renderer",
    "webgl",
    "3d",
    "gltf",
    "ecs"
  ],
  "homepage": "https://github.com/pex-gl/pex-renderer",
  "bugs": "https://github.com/pex-gl/pex-renderer/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pex-gl/pex-renderer.git"
  },
  "license": "MIT",
  "author": "Marcin Ignac <marcin.ignac@gmail.com> (http://marcinignac.com)",
  "contributors": [
    "Damien Seguin (https://github.com/dmnsgn)",
    "Nick Nikolov (https://github.com/nicknikolov)"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./index.js"
    }
  },
  "main": "index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "snowdev build",
    "dev": "snowdev dev",
    "release": "snowdev release",
    "release:alpha": "snowdev release --release-as minor --prerelease alpha"
  },
  "dependencies": {
    "geom-builder": "^3.0.1",
    "hammersley": "^2.0.0",
    "pex-cam": "^3.0.0-alpha.1",
    "pex-geom": "^3.0.2",
    "pex-io": "^3.0.2",
    "pex-loaders": "^1.0.0-alpha.4",
    "pex-math": "^4.1.1",
    "pex-random": "^2.1.2",
    "pex-shaders": "^1.0.0-alpha.34",
    "typed-array-interleave": "^2.0.1"
  },
  "devDependencies": {
    "@hpcc-js/wasm-graphviz": "^1.7.0",
    "@thi.ng/dot": "^2.1.100",
    "angle-normals": "^1.0.0",
    "cosine-gradient": "^0.3.0",
    "es-module-shims": "^2.0.10",
    "fit-rect": "^1.0.3",
    "geom-center-and-normalize": "^2.2.0",
    "geom-parse-obj": "^2.0.0",
    "grid-cells": "^2.0.0",
    "pex-color": "^2.2.0",
    "pex-context": "github:pex-gl/pex-context#8fda334",
    "pex-gui": "^3.1.1",
    "prettier": "^3.5.3",
    "primitive-geometry": "^2.10.1"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.5.1",
    "snowdev": ">=2.5.x"
  },
  "snowdev": {
    "dependencies": [
      "@hpcc-js/wasm-graphviz",
      "@thi.ng/dot",
      "geom-builder",
      "hammersley",
      "pex-cam",
      "pex-geom",
      "pex-io",
      "pex-loaders",
      "pex-math",
      "pex-random",
      "pex-shaders",
      "angle-normals",
      "cosine-gradient",
      "es-module-shims",
      "fit-rect",
      "geom-center-and-normalize",
      "geom-parse-obj",
      "grid-cells",
      "pex-color",
      "pex-context",
      "pex-gui",
      "primitive-geometry",
      "typed-array-interleave"
    ],
    "files": "{*.js,*(systems|components|helpers|loaders|utils)/**/*.js}"
  }
}
