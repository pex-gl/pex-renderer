      "pex-shaders",
      "angle-normals",
      "cosine-gradient",
      "es-module-shims",
      "fit-rect",
      "geom-center-and-normalize",
      "geom-edges",
      "geom-merge",
      "geom-normals",
      "geom-parse-obj",
