  "contributors": [
    "Damien Seguin (https://github.com/dmnsgn)",
    "Nick Nikolov (https://github.com/nicknikolov)"
  ],
  "type": "module",
  "exports": "./index.js",
  "main": "index.js",
  "types": "types/index.d.ts",
  "scripts": {
