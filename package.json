{
  "name": "pex-renderer",
  "version": "3.0.0-45",
  "description": "Physically Based Renderer for Pex",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint {examples/*,loaders/*,shaders/**/*,*}.js",
    "format": "npx prettier {examples/*,loaders/*,shaders/**/*,*}.js --write",
    "format:check": "npx prettier {examples/*,loaders/*,shaders/**/*,*}.js --check"
  },
  "license": "MIT",
  "author": {
    "name": "Marcin Ignac",
    "email": "marcin.ignac@gmail.com",
    "url": "https://github.com/vorg"
  },
  "contributors": [
    "Damien Seguin (https://github.com/dmnsgn)",
    "Nick Nikolov (https://github.com/nicknikolov)"
  ],
  "keywords": [
    "webgl",
    "pbr",
    "pex"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/pex-gl/pex-renderer.git"
  },
  "homepage": "https://github.com/pex-gl/pex-renderer",
  "bugs": {
    "url": "https://github.com/pex-gl/pex-renderer/issues"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "geom-builder": "^2.1.0",
    "hammersley": "^1.0.0",
    "interpolate-angle": "^1.0.2",
    "is-browser": "^2.1.0",
    "latlon-to-xyz": "^1.0.1",
    "mouse-event-offset": "^3.0.2",
    "pex-geom": "^2.0.2",
    "pex-io": "^2.1.0",
    "pex-math": "^3.0.0-2",
    "pex-random": "^1.0.1",
    "primitive-quad": "^2.0.0",
    "signals": "^1.0.0",
    "xyz-to-latlon": "^1.0.2"
  },
  "devDependencies": {
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "prettier": "1.16.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier",
      "markdown"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    }
  }
}
